@model IEnumerable<Sito.Models.Product>

@{
    ViewBag.Title = "Prodotti";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Prodotti</h2>

@Html.ValidationSummary(false, "", new { @class = "text-danger" })

@{ var curruser = (Sito.ServiceReference2.User)Session[Client.Controllers.HomeController.active_user];}
@if (curruser != null && curruser.admin)
{
<div>
    @using (Html.BeginForm())
    {
        <input type="button" class="button1" value="Aggiungi Prodotto" onclick="@("location.href='" + Url.Action("AddProduct", "Home") + "'")" />
    }
</div>
}

@if (Model.Count() > 0)
{
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.img_url)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.brand)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.model)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cpu)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.storage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.battery)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ram)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.os)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.camera)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.display)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.sim)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.quantity)
        </th>
        <th></th>
    </tr>

    @foreach (Sito.Models.Product item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.img_url)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.brand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.model)
            </td>
